/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cardlist-container{
    padding: 0;
}
.cardlist-container .cardlist{
    margin: 15px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.navigator-hover {
    color:blue;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}
.btn-area{
  width:'100%';
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-around;
}

.jump-store{
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    background: #fff;
    box-shadow: 0 0px 4px 0 #DDDDDD, 0 3px 8px 2px #DDDDDD;
    position: fixed;
    right: 5px;
    bottom: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.jump-store .icon-xiaoxi{
    font-size: 70rpx;
    position: relative;
}
.jump-store .icon-xiaoxi:after{
    position: absolute;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    right: 8rpx;
    top: 8rpx;
    background: red;
}
.loading{
    text-align: center;
    color: #666;
    font-size: 20rpx;
    margin-bottom: 3px;
}
