<view class="container" style="height: 100%; padding-bottom: 130rpx">
    <view class="count-down">倒计时 7:23</view>
    <view class="cardlist">
        <view class="card-title card-title-detail">
            {{item.title}}
        </view>
        <view class="card-active card-detail-active">
            <view class="card-detail-message">
                <view class="card-rank">
                    <view class="card-rank-title card-detail-rank">
                        <text class="iconfont icon-wode rank-icon"></text>
                        <text>{{item.read}}</text>
                    </view>
                </view>
                <view class="card-rank card-detail-rank">
                    <view class="card-rank-title">
                        <text class="iconfont icon-pinglun rank-icon"></text>
                        <text>{{item.message.length}}</text>
                    </view>
                </view>
            </view>
            <view class="card-detail-message">
                <text class="card-answer-button">立即抢答</text>
            </view>
        </view>
    </view>
    <!-- 评论 -->
    <view class="cardlist cardlist-detail">
        <view class="card-title-detail card-avatar">
            <view class="avatar-name">
                <image class="card-detail-avatar" mode="scaleToFill" src="{{m2m.avatar}}"></image>
                <text class="name">{{m2m.name}}</text>
                <view class="tip">{{m2m.index}}</view>
            </view>
            <view class="">
                <text class="iconfont icon-shoucang1" style="font-size: 24rpx; color: #FDD545"></text>
                <text class="iconfont icon-fenxiang" style="margin-left: 20rpx; font-size: 24rpx; color: #FDD545"></text>
            </view>
        </view>
        <view class="detail-comment">
            {{m2m.comment}}
        </view>
        <view class="message-info">
            <view class="message-info-time">
                <text>{{m2m.time}}</text>
            </view>
            <view class="card-detail-message">
                <view class="">
                    <text class="iconfont icon-dianzan" style="margin-right: 10rpx; font-size: 24rpx"></text>
                    <text>{{m2m.linkNum}}</text>
                </view>
                <view style="margin-left: 30rpx">
                    <text class="iconfont icon-pinglun" style="margin-right: 10rpx; font-size: 24rpx"></text>
                    <text>{{m2m.message}}</text>
                </view>
            </view>
        </view>
        <!--二级评论 -->
        <view class="m2m">
            <block wx:for="{{list}}" wx:key="*this" wx:for-item="m2m">
                <view class="message-to-message">
                    <view class="m2m-avatar">
                        <image class="card-detail-avatar" mode="scaleToFill" src="{{m2m.avatar}}"></image>
                    </view>
                    <view class="m2m-info">
                        <view class="m2m-name">
                            <view>{{m2m.name}}</view>
                            <view class="grey">{{m2m.time}}</view>
                        </view>
                        <view class="m2m-content">{{m2m.comment}}</view>
                    </view>
                </view>
            </block>
        </view>
    </view>
    <!-- 输入框 -->
    <view class="message-input">
        <!-- <input placeholder-style="color:#D1D1D1" placeholder="请洒下你的笔墨" /> -->
        <textarea maxlength='200' auto-height placeholder-style="color:#D1D1D1" fixed placeholder="请洒下你的笔墨" />
    </view>
</view>